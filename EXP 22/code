%{
#include <stdio.h>
#include <stdlib.h>

int count = 0;
FILE *yyin;
%}

%%
[0-9]+    {
              printf("%s is a constant\n", yytext);
              count++;
          }
.|\n      ;     /* ignore all other characters */
%%

int yywrap()
{
    return 1;
}

int main()
{
    char fname[50];

    printf("Enter File Name : ");
    scanf("%s", fname);

    yyin = fopen(fname, "r");
    if (yyin == NULL)
    {
        printf("Cannot open file\n");
        return 1;
    }

    yylex();

    printf("Number of Constants : %d\n", count);
    fclose(yyin);
    return 0;
}
