%{
#include <stdio.h>

int macro_count = 0;
int header_count = 0;

extern FILE *yyin;
%}

%%
"#define"          { macro_count++; }
"#include"         { header_count++; }
.|\n               ;
%%

int yywrap(void)
{
    return 1;
}

int main(int argc, char *argv[])
{
    yyin = fopen(argv[1], "r");
    yylex();

    printf("Number of macros defined = %d\n", macro_count);
    printf("Number of header files included = %d\n", header_count);

    fclose(yyin);
    return 0;
}
