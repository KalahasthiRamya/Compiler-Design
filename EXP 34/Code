%{
#include <stdio.h>

extern FILE *yyin;
%}

%%
if|else|while|int|switch|for|char|return|void   { printf("\n%s : KEYWORD", yytext); }
[a-zA-Z_][a-zA-Z0-9_]*                          { printf("\n%s : IDENTIFIER", yytext); }
.|\n                                             ;
%%

int yywrap(void)
{
    return 1;
}

int main(int argc, char *argv[])
{
    if (argc != 2)
    {
        printf("Usage : %s <input_file.c>\n", argv[0]);
        return 1;
    }

    yyin = fopen(argv[1], "r");
    if (yyin == NULL)
    {
        printf("Cannot open file\n");
        return 1;
    }

    yylex();

    fclose(yyin);
    return 0;
}
