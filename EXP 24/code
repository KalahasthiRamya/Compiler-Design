%{
#include <stdio.h>
#include <stdlib.h>

int count = 0;
FILE *yyin;
%}

%%
"</"[^>]+">"    {
                    printf("%s\n", yytext);
                    count++;
                }
"<"[^/>][^>]*">" {
                    printf("%s\n", yytext);
                    count++;
                }
.|\n            ;
%%

int yywrap()
{
    return 1;
}

int main()
{
    char fname[50];

    printf("Enter File Name : ");
    scanf("%s", fname);

    yyin = fopen(fname, "r");
    if (yyin == NULL)
    {
        printf("Cannot open file\n");
        return 1;
    }

    yylex();

    printf("\nNumber of html tags: %d\n", count);
    fclose(yyin);
    return 0;
}
