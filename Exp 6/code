#include <stdio.h>
#include <ctype.h>

int main()
{
    char id[50];
    int i, valid = 1;

    printf("Enter an identifier: ");
    scanf("%s", id);

    // First character must be alphabet or underscore
    if (!isalpha(id[0]) && id[0] != '_')
        valid = 0;

    // Remaining characters
    for (i = 1; id[i] != '\0'; i++)
    {
        if (!isalnum(id[i]) && id[i] != '_')
        {
            valid = 0;
            break;
        }
    }

    if (valid)
        printf("Valid identifier");
    else
        printf("Invalid identifier");

    return 0;
}
