%{
#include <stdio.h>

int lineno = 1;
FILE *yyin;
%}

%%
^[ \t]*\n        ;   /* ignore blank lines */
^.*\n            {
                      printf("%d    %s", lineno, yytext);
                      lineno++;
                  }
%%

int yywrap(void)
{
    return 1;
}

int main(int argc, char *argv[])
{
    yyin = fopen(argv[1], "r");
    yylex();
    fclose(yyin);
    return 0;
}
