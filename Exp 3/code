#include <stdio.h>
#include <ctype.h>
#include <string.h>

int isKeyword(char word[])
{
    if (strcmp(word, "int") == 0 ||
        strcmp(word, "main") == 0 ||
        strcmp(word, "printf") == 0)
        return 1;
    return 0;
}

int isOperator(char ch)
{
    return (ch == '+' || ch == '-' || ch == '*' ||
            ch == '/' || ch == '=' || ch == '%');
}

int main()
{
    FILE *fp;
    char ch, token[20];
    int i = 0;

    fp = fopen("input.txt", "r");

    if (fp == NULL)
    {
        printf("Cannot open file");
        return 0;
    }

    while ((ch = fgetc(fp)) != EOF)
    {
        // Ignore spaces, tabs, newlines
        if (ch == ' ' || ch == '\n' || ch == '\t')
            continue;

        // Ignore single-line comment
        if (ch == '/')
        {
            char next = fgetc(fp);
            if (next == '/')
            {
                while ((ch = fgetc(fp)) != '\n');
                continue;
            }
            else
            {
                ungetc(next, fp);
            }
        }

        // Identifier or Keyword
        if (isalpha(ch))
        {
            i = 0;
            token[i++] = ch;
            while (isalnum(ch = fgetc(fp)))
                token[i++] = ch;

            token[i] = '\0';
            ungetc(ch, fp);

            if (isKeyword(token))
                printf("%s is keyword\n", token);
            else
                printf("%s is identifier\n", token);
        }

        // Operator
        else if (isOperator(ch))
        {
            printf("%c is operator\n", ch);
        }
    }

    fclose(fp);
    return 0;
}
